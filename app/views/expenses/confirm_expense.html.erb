<% if user_signed_in? %>
  <% provide(:title, @user.name) %>
  <div>
    <table border="", class="expense", style="background-color:  #fff;">
      <thead class="expense",>
        <tr>
         <div class="h9">経費精算確認</div>
          <td class="h7", style="width: 400px"><%= l(@first_day, format: :middle) %></td>
          <td class="h7" colspan="2", style="width: 400px"> 名前　<%= @user.name %></td>
        </tr>
        <tr>
          <td class="h7">
           <% if @expenses_request.present?%>
              <% unless @expenses_request == nil %>
                <% if @expenses_request.expense_confirmation_status == "申請中" %>
                  承認者確認　<%= @expenses_request.expense_confirmation %>へ申請中
                <% end %>
                <% if @expenses_request.expense_confirmation_status == "承認" %>
                  承認者確認  <%= @expenses_request.expense_confirmation %>承認済
                <% end %>
            <% end %>
            <% else %>
              <%="　　　承認者確認　　　"%>
            <% end %>
          <% else %>
              <%="　　　承認者確認　　　"%>
          <% end %>
          </td>
          <td class="h7">
           <% if @expenses_request.present?%>
              <% unless @expenses_request == nil %>
                <% if @expenses_request.expense_confirmation_status == "申請中" %>
                　　　申請金額<%= number_to_currency(@expenses_request.request_money, unit: " ¥", strip_insignificant_zeros: true) %>　　
                <% end %>
                <% if @expenses_request.expense_confirmation_status == "承認" %>
                　　　承認金額  <%= number_to_currency(@expenses_request.request_money, unit: " ¥", strip_insignificant_zeros: true) %>　　
                <% end %>
              <% else %>
                <%="　　　　申請金額　　　　"%>
            <% end %>
           <% else %>
            <%="　　　　申請金額　　　　"%>
           <% end %>
          </td>
        </tr>
      </thead>
    </table>
      <% if @expenses_request_count > 0 %>
        <div>
          <nav border="", class="expenserequest">
            <div>
              <%= link_to "経費清算申請があります。", notice_expense_expense_path(id: current_user.id), remote: true, class:"expenserequest"%>
            </div>
          </nav>
        </div>
      <% end %>
        <table border="", class="expensebody", style="height: 100px">
          <tbody class="expensebody2">
            <tr>
              <th class="h8">日付</th>
              <th class="h8">　　　　備　考　　　　　</th>
              <th class="h8">経費金額</th>
            </tr>
          </tbody>
          <tbody class="expensebody2">
            <% @expenses.each do |exp| %>
              <tr>
                 <td><%= l(exp.expenses_day, format: :short)  %></td>
                 <td><%= exp.expenses_note %></td>
                 <td><%= number_to_currency(exp.expenses_money, unit: "¥ ", strip_insignificant_zeros: true) %></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
       <div>
               <table border="", class="expensebody">

          <tfoot>
            <tr>
              <td style="width: 630px">
                  <%= form_with(model: @user, url: expense_request_expense_path(id: current_user.id),local: true,  method: :patch) do |f| %>
                  <%= f.hidden_field :update_expense_day, :value => @first_day %>
                  <%= f.hidden_field :user_id, :value => @user.id %>
                  <%= f.hidden_field :request_money, :value => @expenses_sum %>
                  <%= f.hidden_field :expense_confirmation_status, :value => "申請中" %>
             <% if @expenses_request.present?%>
                <td class="h8", style="width: 180px">合計 <%= number_to_currency(@expenses_sum, unit: "¥ ", strip_insignificant_zeros: true)%></td>
              <%end%>
            </td>
            </tr>
          </tfoot>
       </table>
      </div>
  </div>
  <% end %>
